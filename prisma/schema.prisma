generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Character {
  id             String           @id @default(cuid())
  name           String
  level          Int              @default(1)
  ancestry       String
  background     String
  clazz          String
  subclass       String?
  heritage       String?
  keyAbility     String
  abilities      Json
  skills         Json
  feats          Json
  spells         Json
  gear           Json
  companions     Json
  legality       String           @default("pending")
  legalityLog    String?
  portraitUrl    String?
  tokenUrl       String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  logEntries     PfsLogEntry[]
  versions       CharacterVersion[]
}

model PfsLogEntry {
  id          String   @id @default(cuid())
  characterId String
  date        DateTime
  scenario    String
  notes       String?
  createdAt   DateTime @default(now())

  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
}

model CharacterVersion {
  id          String    @id @default(cuid())
  characterId String
  createdAt   DateTime  @default(now())
  summary     Json

  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
}
